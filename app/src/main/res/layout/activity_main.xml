<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.fixed.u8.ui.activity.LoginActivity">

    <data>

        <variable
            name="handlerClick"
            type="com.ja.assets.MainActivity" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/homeFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/commonBottomRelativeLayout" />

        <RelativeLayout
            android:id="@+id/commonBottomRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70"
            android:layout_alignParentBottom="true">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@mipmap/home_tab_rec" />

            <RelativeLayout
                android:id="@+id/commonBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_70"
                android:layout_alignParentBottom="true">


                <RelativeLayout
                    android:id="@+id/homePageRelative"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/homeTraceCodeLinear"
                    android:gravity="center"
                    android:onClick="@{handlerClick::mainHandlerClick}"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/homeStartImg"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_8"
                        android:src="@mipmap/home_tab_select" />

                    <TextView
                        android:id="@+id/homeStartTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:text="@string/homePage"
                        android:textColor="@color/mainBgColor"
                        android:textSize="@dimen/textSize_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/homeTraceCodeLinear"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_70"
                    android:layout_centerInParent="true"
                    android:onClick="@{handlerClick::mainHandlerClick}"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/home_tab_cir"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/homeTraceCodeImg"
                            android:layout_width="@dimen/margin_50"
                            android:layout_height="@dimen/margin_50"
                            android:padding="@dimen/margin_15"
                            android:src="@mipmap/home_tab_trace_code" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/homeTraceCodeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:text="@string/scanCodeQuery"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_10" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/userInfoRelative"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/homeTraceCodeLinear"
                    android:gravity="center"
                    android:onClick="@{handlerClick::mainHandlerClick}"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/homeEndImg"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_8"
                        android:src="@mipmap/home_tab_user_unselect" />

                    <TextView
                        android:id="@+id/homeEndTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:text="@string/userInfo"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_10" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</layout>