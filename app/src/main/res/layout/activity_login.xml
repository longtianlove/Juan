<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.fixed.u8.ui.activity.LoginActivity">

    <data>

        <variable
            name="handlerClick"
            type="com.ja.assets.ui.activity.login.LoginActivity" />
    </data>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_title" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/headImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/logo_img"
                            android:layout_width="@dimen/margin_80"
                            android:layout_height="@dimen/margin_80"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_20"
                            android:src="@mipmap/logo" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:layout_marginTop="@dimen/margin_20"
                            android:layout_marginRight="@dimen/margin_20"
                            android:background="@drawable/edit_square_selector"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_10">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_50"
                                android:background="@color/white">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/Image_account"
                                    android:layout_width="@dimen/margin_25"
                                    android:layout_height="@dimen/margin_25"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:src="@mipmap/account" />


                                <EditText
                                    android:id="@+id/loginAccount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/deletePassword"
                                    android:layout_toRightOf="@+id/Image_account"
                                    android:background="@color/white"
                                    android:hint="@string/enter_account"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/textSize_15" />


                                <ImageView
                                    android:id="@+id/deletePassword"
                                    android:layout_width="@dimen/margin_25"
                                    android:layout_height="@dimen/margin_25"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/margin_5"
                                    android:onClick="@{handlerClick::loginHandleClick}"
                                    android:padding="@dimen/margin_5"
                                    android:src="@mipmap/delete" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:background="@color/mainBgColor" />

                            <RelativeLayout
                                android:id="@+id/relativeLayout01"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_50"
                                android:background="@color/white">

                                <ImageView
                                    android:id="@+id/Image_password"
                                    android:layout_width="@dimen/margin_25"
                                    android:layout_height="@dimen/margin_25"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:src="@mipmap/password" />

                                <EditText
                                    android:id="@+id/loginPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toStartOf="@+id/displayPassword"
                                    android:layout_toEndOf="@+id/Image_password"
                                    android:background="@color/white"
                                    android:hint="@string/enter_password"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:lines="1"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/textSize_15" />

                                <CheckBox
                                    android:id="@+id/displayPassword"
                                    android:layout_width="@dimen/margin_25"
                                    android:layout_height="@dimen/margin_25"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/margin_5"
                                    android:background="@drawable/check_box_bg"
                                    android:button="@null"
                                    android:padding="@dimen/margin_5" />

                            </RelativeLayout>
                        </LinearLayout>


                        <Button
                            android:id="@+id/loginBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_20"
                            android:layout_marginTop="@dimen/margin_60"
                            android:layout_marginRight="@dimen/margin_20"
                            android:layout_marginBottom="@dimen/margin_80"
                            android:background="@drawable/btn_selector"
                            android:gravity="center"
                            android:onClick="@{handlerClick::loginHandleClick}"
                            android:text="@string/Login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_18" />

                    </LinearLayout>


                    <include
                        android:id="@+id/common_bottom_bar"
                        layout="@layout/common_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>