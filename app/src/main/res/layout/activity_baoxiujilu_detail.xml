<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/title_color"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"

                android:src="@drawable/icon_back_white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleLeftTextBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv_back_temp"
                android:layout_centerVertical="true"
                android:text="@string/goBfack"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="维修详情"
            android:textColor="#fff"
            android:textSize="18sp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    >

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/assetTraceCodeText"
                            android:textColor="@color/textColor"/>

                        <TextView
                            android:id="@+id/tv_epcid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/margin_40"
                        android:layout_height="@dimen/margin_40"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/tv_trace_code_selector"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_erweima"
                            android:layout_width="@dimen/margin_40"
                            android:layout_height="@dimen/margin_40"
                            android:src="@mipmap/home_tab_trace_code_white" />
                    </LinearLayout>
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/main_background_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:textColor="@color/textColor"
                            android:text="@string/weixiuDanhao" />

                        <TextView
                            android:id="@+id/tv_weixiudanhao"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:textColor="@color/textColor"
                            android:text="@string/zhuangtai" />

                        <TextView
                            android:id="@+id/tv_weixiuzhuangtai"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:textColor="@color/textColor"
                            android:text="@string/shenqingyonghu" />

                        <TextView
                            android:id="@+id/tv_shenqinngyonghu"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:textColor="@color/textColor"
                            android:text="@string/shenqingbumen" />

                        <TextView
                            android:id="@+id/tv_shenqingbumen"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    style="@style/itemLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/itemStartTV"
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/margin_5"
                        android:textColor="@color/textColor"
                        android:text="@string/chuangjianshijian" />

                    <TextView
                        android:id="@+id/tv_chuangjianshijian"
                        style="@style/itemEndTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/mainBgColor" />
                </LinearLayout>
            </LinearLayout>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_xunjianjieguo"
                    android:layout_width="300dp"
                    android:layout_height="500dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:fadeDuration="300"
                    fresco:failureImage="@drawable/doctor_default"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@drawable/doctor_default"
                    fresco:placeholderImageScaleType="fitCenter" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>

