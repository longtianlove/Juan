<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.inventory.InventoryRecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_title" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    app:cardCornerRadius="@dimen/margin_10"
                    app:cardElevation="@dimen/margin_5"
                    app:cardMaxElevation="@dimen/margin_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/itemLinear"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/itemStartTV"
                                android:layout_width="match_parent"
                                android:layout_margin="@dimen/margin_5"
                                android:text="@string/oddNumber" />

                            <TextView
                                style="@style/itemEndTV"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_10"
                                android:textColor="@color/textColor" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_1"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/main_background_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/inventoryDepartment" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />

                            </LinearLayout>


                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/inventoryPerson" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/inventoryState" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/inventoryTime" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/inventoryType" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/assetsAllTotal" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/inventoryResults" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/doubleCheck" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/inventoryVolume" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/itemLinear"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/itemStartTV"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/margin_5"
                                    android:text="@string/inventoryLossesQuantity" />

                                <TextView
                                    style="@style/itemEndTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/textColor" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_icon_title" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:text="@string/inventorySurplusAssets"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_16" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/inventorySurplusAssetsRecycler"
                    style="@style/recyclerViewStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_icon_title" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:text="@string/inventoryLossAssets"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/textSize_16" />

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/inventoryLossAssetsRecycler"
                    style="@style/recyclerViewStyle" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
