<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/title_color"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"

                android:src="@drawable/icon_back_white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleLeftTextBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back_temp"
                android:gravity="center"
                android:text="@string/goBfack"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="维修信息详情"
            android:textColor="#fff"
            android:textSize="18sp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="资产编码："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_zcCodenum"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="资产追溯码："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_epcid"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="资产名称："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_zcName"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="剩余期限："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_shengyuqixian"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="到期期限："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_daoqiqixian"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="保修期限："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_baoxiuqixian"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">



                        <TextView
                            android:id="@+id/tv_repairMode"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">



                        <TextView
                            android:id="@+id/tv_deliverMode"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="服务商名称："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_fuwushangmingcheng"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="地址："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_dizhi"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="联系人："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_lianxiren"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="电话："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_dianhua"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="送修地址："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_songxiudizhi"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/itemLinear"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/itemStartTV"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:text="维修结论："
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/tv_weixiujielun"
                            style="@style/itemEndTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/mainBgColor" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>

