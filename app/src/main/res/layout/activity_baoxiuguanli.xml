<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/title_color"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"

            android:src="@drawable/icon_back_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleLeftTextBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_back_temp"
            android:layout_centerVertical="true"
            android:text="@string/goBfack"
            android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="报修申请"
            android:textColor="#fff"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_tianjiazichan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="添加资产"
            android:textColor="#fff"
            android:textSize="18sp"></TextView>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/scl_bag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ja.assets.new_code.view.WithListViewScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.ja.assets.new_code.view.WithScrolleViewListView
                    android:id="@+id/lv_zichans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:background="#fff"
                    android:divider="#EEEEEE"
                    android:dividerHeight="5dp"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false"
                    android:listSelector="@android:color/transparent"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />


            </FrameLayout>
        </com.ja.assets.new_code.view.WithListViewScrollView>

        <TextView
            android:id="@+id/tv_tijiao"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/xml_login_background"
            android:enabled="false"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="14sp"></TextView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/noAssetsLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submitAuditLinear"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/margin_120"
            android:layout_height="@dimen/margin_120"
            android:src="@mipmap/not_health_order" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/noAssetsText"
            android:textColor="@color/mainBgColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/clickRightBtnAdd"
            android:textColor="@color/mainBgColor"
            android:textSize="@dimen/textSize_18"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
