<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_10"
    app:cardElevation="@dimen/margin_5"
    app:cardMaxElevation="@dimen/margin_5"
    app:contentPadding="@dimen/margin_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize_16" />

            <ImageView
                android:id="@+id/itemPurchaseAuditDelete"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/margin_10"
                android:src="@mipmap/icon_delete"
                android:textColor="@color/textColor" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/code" />

                <TextView
                    android:id="@+id/itemCodeTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/adminDepartmentText" />

                <TextView
                    android:id="@+id/itemAdminDepartmentTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/category" />

                <TextView
                    android:id="@+id/itemCategoryTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/outDepartment" />

                <TextView
                    android:id="@+id/itemOutDepartmentTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/source" />

                <TextView
                    android:id="@+id/itemSourceTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/putDepartment" />

                <TextView
                    android:id="@+id/itemPutDepartmentTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/originalValue" />

                <TextView
                    android:id="@+id/itemOriginalValueTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/useDate" />

                <TextView
                    android:id="@+id/itemUseDateTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/netWorth" />

                <TextView
                    android:id="@+id/itemNetWorthTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/surplusTerm" />

                <TextView
                    android:id="@+id/itemSurplusTermTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>