<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_10"
    app:cardElevation="@dimen/margin_5"
    app:cardMaxElevation="@dimen/margin_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/itemLinear"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/itemStartTV"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/margin_5"
                    android:text="@string/assetTraceCodeText" />

                <TextView
                    android:id="@+id/tv_epcid"
                    style="@style/itemEndTV"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:textColor="@color/textColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                android:layout_alignParentEnd="true"
                android:background="@drawable/tv_trace_code_selector"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_erweima"
                    android:layout_width="@dimen/margin_40"
                    android:layout_height="@dimen/margin_40"
                    android:src="@mipmap/home_tab_trace_code_white" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/main_background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemLinear"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/itemStartTV"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:text="@string/assetsNumber" />

                <TextView
                    android:id="@+id/tv_zichanbianhao"
                    style="@style/itemEndTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/mainBgColor" />

            </LinearLayout>


            <LinearLayout
                style="@style/itemLinear"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/itemStartTV"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:text="@string/assetsNameText" />

                <TextView
                    android:id="@+id/tv_zichanmingcheng"
                    style="@style/itemEndTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/mainBgColor" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemLinear"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/itemStartTV"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:text="@string/useDepartment" />

                <TextView
                    android:id="@+id/tv_shiyongbumen"
                    style="@style/itemEndTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/mainBgColor" />

            </LinearLayout>

            <LinearLayout
                style="@style/itemLinear"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/itemStartTV"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:text="@string/adminDepartmentText" />

                <TextView
                    android:id="@+id/tv_guanlibumen"
                    style="@style/itemEndTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/mainBgColor" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/itemLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/itemStartTV"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:text="@string/storageAddress" />

            <TextView
                android:id="@+id/tv_cunfangdizhi"
                style="@style/itemEndTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/mainBgColor" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>