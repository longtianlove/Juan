<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_10"
    app:cardElevation="@dimen/margin_5"
    app:cardMaxElevation="@dimen/margin_5"
    app:contentPadding="@dimen/margin_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/assetsNameAndCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textSize_16" />

            <ImageView
                android:id="@+id/itemPurchaseAuditDelete"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/margin_10"
                android:src="@mipmap/icon_delete"
                android:textColor="@color/textColor"
                android:visibility="gone" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/category" />

                <TextView
                    android:id="@+id/itemAssetsCategoryTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/assetsCode" />

                <TextView
                    android:id="@+id/itemAssetsCodeTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/source" />

                <TextView
                    android:id="@+id/itemAssetsSourceTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>


            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/adminDepartmentText" />

                <TextView
                    android:id="@+id/itemAssetsAdminDepartmentTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/originalValue" />

                <TextView
                    android:id="@+id/itemAssetsOriginalValueTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>


            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/useDepartment" />

                <TextView
                    android:id="@+id/itemAssetsUseDepartmentTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/netWorthText" />

                <TextView
                    android:id="@+id/itemAssetsNetWorthTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/useDate" />

                <TextView
                    android:id="@+id/itemAssetsUseDateTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/serviceLife" />

                <TextView
                    android:id="@+id/itemAssetsServiceLifeTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>


            <LinearLayout
                style="@style/itemItemLinear"
                android:layout_weight="1">

                <TextView
                    style="@style/itemItemStartTV"
                    android:text="@string/surplusTerm" />

                <TextView
                    android:id="@+id/itemAssetsSurplusTermTV"
                    style="@style/itemItemEndTV" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>